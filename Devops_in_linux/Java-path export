sudo alternatives --install /usr/bin/jar jar /opt/jdk-12.0.2/bin/jar 1

sudo alternatives --install /usr/bin/javac javac /opt/jdk-12.0.2/bin/javac 1

sudo alternatives --set jar /opt/jdk-12.0.2/bin/jar

sudo alternatives --set javac /opt/jdk-12.0.2/bin/javac



export JRE_HOME=/opt/jdk-12.0.2/jre

export PATH=$PATH:$JRE_HOME/bin

export JAVA_HOME=/opt/jdk-12.0.2

export JAVA_PATH=$JAVA_HOME

export PATH=$PATH:$JAVA_HOME/bin